<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
                <div class="container-xxl flex-grow-1 container-p-y">
                    <h4 class="py-3 mb-4">Media</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-flush mb-5 mb-xl-10">
                                <div class="card-body border-top-0 pt-5 p-9">
                                    <div class="row g-10 mb-5">
                                        <% if(media.length > 0) {  %>
                                            <% for(let i=0; i < media.length; i++) { %>
                                                <div class="col-md-3 media-img">
                                                    <div class="card h-100 ">
                                                        <div class="card-header ml-auto">
                                                            <a href="/delete-media?img=<%= media[i].url %>&id=<%= media[i]._id %>" onclick="return confirmation()" class="text-danger"><i class="bx bx-trash"></i></a>
                                                        </div>
                                                        <div class="card-body text-center">
                                                            <% if(media[i].type === 'image') { %>
                                                                <img src="./assets/userImages/<%= media[i].url %>" alt="Media Image">
                                                                <div class="d-flex justify-content-center mt-3">
                                                                    <span class="text-center bg-dark text-white fs-6"><%= media[i].url %></span>
                                                                </div>  
                                                            <% } else if(media[i].type === 'audio') { %>
                                                                <div class="audio-container">
                                                                    <i class="fa-regular fa-file-audio"></i>
                                                                    <audio controls class="w-px-250">
                                                                        <source src="./assets/userImages/<%= media[i].url %>" type="audio/mpeg">
                                                                        Your browser does not support the audio element.
                                                                    </audio>
                                                                </div>
                                                                <div class="d-flex justify-content-center mt-3">
                                                                    <span class="text-center bg-dark text-white"><%= media[i].url %></span>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }  %>             
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        <%- include('../layout/footer.ejs') %>

                                        